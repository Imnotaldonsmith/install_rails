<div id="directed-graph-steps" data-url="<%= steps_url %>">
  <button id="save-directed-graph" class="save btn btn-large btn-primary">Save</button>
  <button id="#save-directed-graph" class="cancel btn btn-large btn-default">Cancel</button>

</div>


<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Permalink</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.id %></td>
        <td><%= step.title %></td>
        <td><%= step.permalink %></td>
        <td><%= step.content %></td>
        <td><%= link_to 'Show', step %></td>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

